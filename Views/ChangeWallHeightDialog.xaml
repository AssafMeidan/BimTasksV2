<Window x:Class="BimTasksV2.Views.ChangeWallHeightDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Wall Height"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <StackPanel Margin="16" MinWidth="320">
        <!-- Top height change -->
        <CheckBox x:Name="ChkTop"
                  IsChecked="{Binding IsAddToTop, Mode=TwoWay}"
                  FontSize="14" FontWeight="SemiBold"
                  Margin="0,0,0,4">
            Change Top Height
        </CheckBox>
        <TextBlock Text="Amount to add/subtract (cm):" Margin="20,0,0,4"/>
        <TextBox Text="{Binding AddToTop, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Margin="20,0,0,12" Padding="4"
                 IsEnabled="{Binding IsChecked, ElementName=ChkTop}"/>

        <!-- Bottom height change -->
        <CheckBox x:Name="ChkBottom"
                  IsChecked="{Binding IsAddToBottom, Mode=TwoWay}"
                  FontSize="14" FontWeight="SemiBold"
                  Margin="0,0,0,4">
            Change Bottom Height
        </CheckBox>
        <TextBlock Text="Amount to add/subtract (cm):" Margin="20,0,0,4"/>
        <TextBox Text="{Binding AddToBottom, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Margin="20,0,0,16" Padding="4"
                 IsEnabled="{Binding IsChecked, ElementName=ChkBottom}"/>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Height="28"
                    Margin="0,0,8,0" IsDefault="True"
                    Click="OkButton_Click"/>
            <Button Content="Cancel" Width="80" Height="28"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
